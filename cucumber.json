{
    "default" : {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
         "paths": [
            "src/test/features/"
        ],
        "publishQuiet" : true,
        "dryRun" : false,
        "require": [
            "src/test/steps/*.ts",
            "src/hooks/hooks.ts"
        
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format" : [
            "progress-bar",
            "html:reports/cucumber-report.html",
            "json:reports/cucumber-report.json",
            "rerun:@rerun.txt"
        ],
        "parallel" : 2
       
    },
    "rerun" : {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "publishQuiet" : true,
        "dryRun" : false,
        "require": [
            "src/test/steps/*.ts",
            "src/hooks/hooks.ts"
        
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format" : [
            "progress-bar",
            "html:reports/cucumber-report.html",
            "json:reports/cucumber-report.json",
            "rerun:@rerun.txt"
        ],
        "parallel" : 2
       
    }
} 